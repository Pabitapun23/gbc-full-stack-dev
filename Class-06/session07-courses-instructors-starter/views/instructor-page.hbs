<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Course Catalog</title>
  </head>
  <body>
    <h1>Instructor Search Results</h1>
    {{! TODO: list of courses goes here }}

    {{#each instructorList}}
      {{!-- <p>Name: {{this.firstName}} {{this.lastName}}</p> --}}
      {{!-- <p>Userid: {{this.username}}</p> --}}
      <p>Name: {{this.name}}</p>
      <p>Email: {{this.email}}</p>
      {{#if this.coursesTaught}}
        <p>Courses Taught:</p>
        {{#each this.coursesTaught}}
          <p>Course Code: {{this.code}}</p>
          <p>Course Title: {{this.title}}</p>
        {{/each}}
      {{else}}
        <p style="color:red;">No courses taught</p>
      {{/if}}
      <hr />
    {{/each}}
  </body>
</html>